<Window x:Class="EasyShoppingWeb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyShoppingWeb"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" >
        <TextBlock Text="EasyShopping Web" Margin="10,-122,-10,122" FontSize="24" FontWeight="Heavy" FontStyle="Oblique" />
        <TextBlock Text="Indtast brugeroplysninger for at logge på din profil" Margin="10,-74,-10,74" FontSize="15" />
        <TextBlock Text="Brugernavn: " FontSize="20" HorizontalAlignment="Left" Margin="10,1,0,-1" />
        <TextBox Name="userName" HorizontalAlignment="Right" Text="Fx: jimm1034" FontStyle="Italic" Foreground="Gray" TextAlignment="Center" FontSize="14" Margin="0,0,22,0" Width="175" />
        <PasswordBox PasswordChar="*" Margin="193,47,22,-47" Password="012345" Width="175" HorizontalContentAlignment="Center" />
        <TextBlock Name="userPassword" HorizontalAlignment="left" Text="Kode" FontSize="20" Margin="10,47,0,-47" Width="92" />
        <Button Name="loginButton" Content="Log ind" Click="LoginButton_Click" Margin="193,114,127,-114" FontSize="20" />
    </Grid>
</Window>
